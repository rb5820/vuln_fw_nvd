<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- NVD Reference Form View -->
    <record id="view_nvd_reference_form" model="ir.ui.view">
        <field name="name">vuln.fw.nvd.reference.form</field>
        <field name="model">vuln.fw.nvd.reference</field>
        <field name="arch" type="xml">
            <form string="NVD Reference">
                <header>
                    <button name="action_check_url" type="object" string="Check URL Status" class="btn-primary" icon="fa-link"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Broken" bg_color="text-bg-danger" invisible="status != 'broken'"/>
                    <widget name="web_ribbon" title="Redirected" bg_color="text-bg-warning" invisible="status != 'redirected'"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-secondary" invisible="active"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="url" widget="url" placeholder="https://example.com/reference"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="ref_type"/>
                            <field name="status"/>
                            <field name="usage_count" readonly="1"/>
                        </group>
                        <group>
                            <field name="last_checked" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Additional information about this reference..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- NVD Reference List View -->
    <record id="view_nvd_reference_list" model="ir.ui.view">
        <field name="name">vuln.fw.nvd.reference.list</field>
        <field name="model">vuln.fw.nvd.reference</field>
        <field name="arch" type="xml">
            <list string="NVD References">
                <field name="url" widget="url"/>
                <field name="ref_type"/>
                <field name="status"/>
                <field name="usage_count"/>
                <field name="last_checked"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <!-- NVD Reference Search View -->
    <record id="view_nvd_reference_search" model="ir.ui.view">
        <field name="name">vuln.fw.nvd.reference.search</field>
        <field name="model">vuln.fw.nvd.reference</field>
        <field name="arch" type="xml">
            <search string="NVD References">
                <field name="url"/>
                <field name="ref_type"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Version References" name="type_version" domain="[('ref_type', '=', 'version')]"/>
                <filter string="Vendor References" name="type_vendor" domain="[('ref_type', '=', 'vendor')]"/>
                <filter string="Advisory References" name="type_advisory" domain="[('ref_type', '=', 'advisory')]"/>
                <separator/>
                <filter string="Active URLs" name="status_active" domain="[('status', '=', 'active')]"/>
                <filter string="Broken URLs" name="status_broken" domain="[('status', '=', 'broken')]"/>
                <filter string="Redirected URLs" name="status_redirected" domain="[('status', '=', 'redirected')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Reference Type" name="group_type" context="{'group_by': 'ref_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- NVD Reference Action -->
    <record id="action_nvd_reference" model="ir.actions.act_window">
        <field name="name">NVD References</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vuln.fw.nvd.reference</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>
    
    <!-- Menu Item -->
    <menuitem
        id="menu_nvd_references"
        name="ðŸ”— References"
        parent="vuln_fw_nvd.menu_nvd_root"
        action="action_nvd_reference"
        sequence="90"/>

</odoo>
