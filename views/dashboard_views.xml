<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Dashboard Action -->
    <record id="action_nvd_dashboard" model="ir.actions.act_window">
        <field name="name">NVD Dashboard</field>
        <field name="res_model">vuln.fw.nvd.connector</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Welcome to NVD Vulnerability Management
            </p>
            <p>
                Monitor your NVD importers and synchronization status from this dashboard.
                Create and configure NVD importers to start collecting vulnerability data.
            </p>
        </field>
    </record>

    <!-- Dashboard Card View -->
    <record id="view_nvd_importer_kanban" model="ir.ui.view">
        <field name="name">nvd.importer.card</field>
        <field name="model">vuln.fw.nvd.connector</field>
        <field name="arch" type="xml">
            <kanban string="NVD Importers" class="o_kanban_dashboard">
                <field name="name"/>
                <field name="active"/>
                <field name="last_sync_date"/>
                <field name="sync_log_count"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <i class="fa fa-database fa-2x" title="NVD Importer" t-att-style="record.active.raw_value ? 'color: #00A09D;' : 'color: #ccc;'"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_body">
                                    <span class="text-muted">NVD Data Importer</span>
                                    <br/>
                                    <span t-if="record.last_sync_date.raw_value">
                                        Last sync: <field name="last_sync_date"/>
                                    </span>
                                    <span t-else="">Never synced</span>
                                    <br/>
                                    <span class="text-muted">
                                        <field name="sync_log_count"/> sync logs
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.active.raw_value" class="badge badge-success">Active</span>
                                        <span t-else="" class="badge badge-secondary">Inactive</span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <button name="action_sync_sample" type="object" class="btn btn-secondary btn-sm mr-1">
                                            <i class="fa fa-download"/> Sample (10)
                                        </button>
                                        <button name="action_sync_nvd" type="object" class="btn btn-primary btn-sm">
                                            <i class="fa fa-refresh"/> Full Sync
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Dashboard Menu Item -->
    <menuitem 
        id="menu_nvd_dashboard"
        name="ðŸ“± Dashboard"
        parent="menu_nvd_root"
        action="action_nvd_dashboard"
        sequence="10"/>

</odoo>