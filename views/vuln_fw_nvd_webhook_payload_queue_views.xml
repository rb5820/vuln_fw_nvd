<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Webhook Payload Queue Form View -->
        <record id="vuln_fw_nvd_webhook_payload_queue_form" model="ir.ui.view">
            <field name="name">Webhook Payload Queue Form</field>
            <field name="model">vuln.fw.nvd.webhook.payload.queue</field>
            <field name="arch" type="xml">
                <form string="Webhook Payload">
                    <header>
                        <button name="action_process_now" string="ðŸ”„ Process Now" type="object" 
                                class="btn-primary" invisible="state not in ('pending', 'failed')"/>
                        <button name="action_retry" string="ðŸ” Retry Failed" type="object" 
                                class="btn-warning" invisible="state != 'failed'"/>
                        <button name="action_send_to_review" string="ðŸ‘ Send to Review" type="object" 
                                class="btn-info" invisible="state not in ('pending', 'failed')"/>
                        <button name="action_review_done" string="âœ“ Review Done" type="object" 
                                class="btn-success" invisible="state != 'manual_review'"/>
                        <field name="state" widget="statusbar" statusbar_visible="pending,processing,manual_review,success,error"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="receiver_id"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Status &amp; Queue">
                                <field name="state" readonly="1"/>
                                <field name="priority"/>
                                <field name="retry_count" readonly="1"/>
                                <field name="max_retries"/>
                            </group>
                            
                            <group string="Timing">
                                <field name="received_date" readonly="1"/>
                                <field name="processing_started" readonly="1"/>
                                <field name="processing_completed" readonly="1"/>
                                <field name="processing_duration" readonly="1"/>
                            </group>
                            
                            <group string="Source &amp; Security">
                                <field name="source_ip"/>
                                <field name="signature"/>
                            </group>
                            
                            <group string="Payload Info">
                                <field name="payload_size" readonly="1"/>
                                <field name="tags"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Payload" name="payload">
                                <field name="payload" widget="ace" options="{'mode': 'json'}" nolabel="1"/>
                            </page>
                            
                            <page string="Processing Result" name="result">
                                <field name="process_result" widget="ace" options="{'mode': 'json'}" nolabel="1" readonly="1"/>
                            </page>
                            
                            <page string="Error Details" name="error">
                                <field name="error_message" nolabel="1" readonly="1"/>
                            </page>
                            
                            <page string="Related Logs" name="logs">
                                <field name="webhook_log_ids" readonly="1" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        
        <!-- Webhook Payload Queue List View -->
        <record id="vuln_fw_nvd_webhook_payload_queue_list" model="ir.ui.view">
            <field name="name">Webhook Payload Queue List</field>
            <field name="model">vuln.fw.nvd.webhook.payload.queue</field>
            <field name="arch" type="xml">
                <list string="Payload Queue" decoration-danger="state == 'failed'" 
                      decoration-warning="state in ('processing', 'manual_review')" decoration-success="state == 'completed'"
                      decoration-muted="state == 'skipped'">
                    <field name="received_date"/>
                    <field name="receiver_id"/>
                    <field name="state"/>
                    <field name="priority"/>
                    <field name="payload_size"/>
                    <field name="retry_count"/>
                    <field name="processing_duration"/>
                </list>
            </field>
        </record>
        
        <!-- Webhook Payload Queue Search View -->
        <record id="vuln_fw_nvd_webhook_payload_queue_search" model="ir.ui.view">
            <field name="name">Webhook Payload Queue Search</field>
            <field name="model">vuln.fw.nvd.webhook.payload.queue</field>
            <field name="arch" type="xml">
                <search string="Payload Queue Search">
                    <field name="receiver_id"/>
                    <field name="source_ip"/>
                    <field name="tags"/>
                    <separator/>
                    <filter name="pending" string="Pending" domain="[('state', '=', 'pending')]"/>
                    <filter name="processing" string="Processing" domain="[('state', '=', 'processing')]"/>
                    <filter name="manual_review" string="Manual Review" domain="[('state', '=', 'manual_review')]"/>
                    <filter name="completed" string="Completed" domain="[('state', '=', 'completed')]"/>
                    <filter name="failed" string="Failed" domain="[('state', '=', 'failed')]"/>
                    <separator/>
                    <filter name="with_errors" string="With Errors" domain="[('error_message', '!=', False)]"/>
                    <filter name="retried" string="Retried" domain="[('retry_count', '>', 0)]"/>
                    <separator/>
                    <filter name="today" string="Today" domain="[('received_date', '>=', datetime.datetime.combine(datetime.date.today(), datetime.time.min))]"/>
                    <group expand="0" string="Group By">
                        <filter name="by_state" string="State" context="{'group_by': 'state'}"/>
                        <filter name="by_receiver" string="Receiver" context="{'group_by': 'receiver_id'}"/>
                        <filter name="by_date" string="Received Date" context="{'group_by': 'received_date'}"/>
                    </group>
                </search>
            </field>
        </record>
        
    </data>
</odoo>
