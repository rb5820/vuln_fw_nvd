<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sync Log List View -->
    <record id="view_vuln_fw_nvd_sync_log_list" model="ir.ui.view">
        <field name="name">vuln.fw.nvd.sync.log.list</field>
        <field name="model">vuln.fw.nvd.sync.log</field>
        <field name="arch" type="xml">
            <list string="NVD Sync Logs" default_order="sync_date desc">
                <field name="sync_date"/>
                <field name="status" widget="badge" 
                       decoration-success="status == 'success'"
                       decoration-danger="status == 'error'"
                       decoration-warning="status == 'partial'"/>
                <field name="total_processed"/>
                <field name="created_count"/>
                <field name="updated_count"/>
                <field name="message"/>
            </list>
        </field>
    </record>

    <!-- Sync Log Form View -->
    <record id="view_vuln_fw_nvd_sync_log_form" model="ir.ui.view">
        <field name="name">vuln.fw.nvd.sync.log.form</field>
        <field name="model">vuln.fw.nvd.sync.log</field>
        <field name="arch" type="xml">
            <form string="NVD Sync Log" create="false" edit="false">
                <header>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="sync_date"/>
                            <field name="status"/>
                            <field name="total_processed"/>
                        </group>
                        <group>
                            <field name="created_count"/>
                            <field name="updated_count"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group string="Details">
                        <field name="message" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Sync Log Search View -->
    <record id="view_vuln_fw_nvd_sync_log_search" model="ir.ui.view">
        <field name="name">vuln.fw.nvd.sync.log.search</field>
        <field name="model">vuln.fw.nvd.sync.log</field>
        <field name="arch" type="xml">
            <search string="Search Sync Logs">
                <field name="sync_date"/>
                <field name="status"/>
                <filter string="Success" name="success" domain="[('status', '=', 'success')]"/>
                <filter string="Error" name="error" domain="[('status', '=', 'error')]"/>
                <filter string="Today" name="today" domain="[('sync_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="this_week" 
                        domain="[('sync_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                <filter string="Date" name="group_date" context="{'group_by': 'sync_date:day'}"/>
            </search>
        </field>
    </record>

