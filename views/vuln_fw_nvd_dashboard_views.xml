<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <!-- Dashboard Card View -->
    <record id="view_vuln_fw_nvd_dashboard_kanban" model="ir.ui.view">
        <field name="name">nvd.importer.card</field>
        <field name="model">vuln.fw.nvd.api.connector</field>
        <field name="arch" type="xml">
            <kanban string="NVD Importers" class="o_kanban_dashboard">
                <field name="name"/>
                <field name="active"/>
                <field name="last_sync_date"/>
                <field name="sync_log_count"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <i class="fa fa-database fa-2x" title="NVD Importer" t-att-style="record.active.raw_value ? 'color: #00A09D;' : 'color: #ccc;'"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_body">
                                    <span class="text-muted">NVD Data Importer</span>
                                    <br/>
                                    <span t-if="record.last_sync_date.raw_value">
                                        Last sync: <field name="last_sync_date"/>
                                    </span>
                                    <span t-else="">Never synced</span>
                                    <br/>
                                    <span class="text-muted">
                                        <field name="sync_log_count"/> sync logs
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.active.raw_value" class="badge badge-success">Active</span>
                                        <span t-else="" class="badge badge-secondary">Inactive</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



</odoo>