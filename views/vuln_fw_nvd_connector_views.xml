<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- NVD Importer Form View -->
    <record id="view_nvd_connector_form" model="ir.ui.view">
        <field name="name">nvd.connector.form</field>
        <field name="model">vuln.fw.nvd.connector</field>
        <field name="arch" type="xml">
            <form string="National Vulnerability Database Connector">
                <header>
                    <field name="active" string="Active" widget="boolean_toggle"/>
                    <field name="connector_active" string="Connector Active" widget="boolean_toggle"/>
                   
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="National Vulnerability Database Connector Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="api_url" placeholder="https://services.nvd.nist.gov/rest/json"/>
                            <field name="api_key" password="True"/>
                        </group>
                        <group>
                            <field name="last_sync_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- NVD Connector List View -->
    <record id="view_nvd_connector_list" model="ir.ui.view">
        <field name="name">nvd.connector.list</field>
        <field name="model">vuln.fw.nvd.connector</field>
        <field name="arch" type="xml">
            <list string="National Vulnerability Database Connectors">
                <field name="name"/>
                <field name="last_sync_date"/>
                <field name="connector_active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- NVD Importer Action -->
    <record id="action_nvd_connector" model="ir.actions.act_window">
        <field name="name">NVD Connectors</field>
        <field name="res_model">vuln.fw.nvd.connector</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first NVD Importer
            </p>
            <p>
                Set up NVD (National Vulnerability Database) importers to automatically 
                synchronize vulnerability data from NIST into your Odoo system.
            </p>
        </field>
    </record>

    <!-- Menu Item for NVD Connectors -->
    <menuitem 
        id="menu_nvd_connectors"
        name="ðŸ”— NVD Connectors"
        parent="menu_nvd_config"
        action="action_nvd_connector"
        sequence="10"/>

</odoo>