<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Base NVD security configuration -->

    <!-- Categories and groups for NVD management  -->
    <record id="module_vuln_fw_nvd_category" model="ir.module.category">
        <field name="name">NVD Vulnerability Database</field>
        <field name="description">Permissions for NVD vulnerability database management</field>
        <field name="sequence">30</field>
    </record>
    
    <!-- NVD User Group -->
    <record id="group_nvd_user" model="res.groups">
        <field name="name">NVD User</field>
        <field name="category_id" ref="module_vuln_fw_nvd_category"/>
        <field name="comment">Users can view NVD vulnerabilities and synchronization logs.</field>
    </record>
    
    <!-- NVD Manager Group -->
    <record id="group_nvd_manager" model="res.groups">
        <field name="name">NVD Manager</field>
        <field name="category_id" ref="module_vuln_fw_nvd_category"/>
        <field name="implied_ids" eval="[(4, ref('group_nvd_user'))]"/>
        <field name="comment">Users can manage NVD source configuration, synchronization, and data.</field>
    </record>
    

    
